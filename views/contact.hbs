        <div class="card">
  <span class="title">Kontaktformular </span>
  <form class="form" action="/contact" method="post">
    <div class="group">
    <input placeholder="‎" type="text" name="name" required="">
    <label for="name">Name</label>
    <img class="i"  src="icons/user.svg" alt="">
    </div>
<div class="group">
    <input placeholder="‎" type="email" id="email" name="email" required="">
    <label for="email">Email</label>
    <img class="i" src="icons/mail.svg" alt="">
    </div>
<div class="group">
    <textarea placeholder="‎" maxlength="500" id="comment" name="comment" rows="5" required=""></textarea>
    <label for="comment">Kommentare</label>
    <img class="i" src="icons/comment.svg" alt="">
</div>
    <button type="submit">Submit</button>
  </form>
</div>
